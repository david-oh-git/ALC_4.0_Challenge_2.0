<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/id_btn_email_signin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="248dp"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="@dimen/dimen_btn_icon_padd"
        android:text="@string/str_signin_btntxt"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/button3"
        app:layout_constraintStart_toStartOf="@+id/button3"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/dimen_btn_standard_margin"
        android:layout_marginEnd="8dp"
        android:background="@drawable/common_google_signin_btn_text_dark_normal"
        android:drawablePadding="@dimen/dimen_btn_icon_padd"
        android:text="@string/str_googlebtn"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_btn_email_signin" />
</androidx.constraintlayout.widget.ConstraintLayout>