<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark" >@android:color/white</item>
        <item name="colorAccent" >@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="actionOverflowButtonStyle">@style/MyOverflowButtonStyle</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="actionBarStyle">@style/AppToolbar</item>
        <!--<item name="android:actionMenuTextColor">@android:color/black</item>-->
    </style>

    <style name="AppToolbar" parent="AppTheme">
        <item name="android:titleTextStyle">@style/AppBarTextTitle</item>
        <!--<item name="android:textColor">@android:color/black</item>-->

    </style>

    <style name="AppBarTextTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/holo_blue_bright</item>
    </style>

    <style name="MyOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/iconColor</item>
    </style>

</resources>
